<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SixthFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/buttonSixthNext"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#637B7E"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/quizFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/quiz_five"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/pitaija"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/grayGreen"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/pitaija"
        app:layout_constraintEnd_toStartOf="@+id/persimon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizFive" />

    <ImageButton
        android:id="@+id/persimon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/grayGreen"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/persimon"
        app:layout_constraintEnd_toStartOf="@+id/granaattiomena"
        app:layout_constraintStart_toEndOf="@+id/pitaija"
        app:layout_constraintTop_toBottomOf="@+id/quizFive" />

    <ImageButton
        android:id="@+id/granaattiomena"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/grayGreen"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/granaattiomena"
        app:layout_constraintEnd_toStartOf="@+id/viikuna"
        app:layout_constraintStart_toEndOf="@+id/persimon"
        app:layout_constraintTop_toBottomOf="@+id/quizFive" />

    <ImageButton
        android:id="@+id/viikuna"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@color/grayGreen"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/viikuna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/granaattiomena"
        app:layout_constraintTop_toBottomOf="@+id/quizFive" />


</androidx.constraintlayout.widget.ConstraintLayout>